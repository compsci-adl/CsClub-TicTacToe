<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".TitleScreen"
                android:background="@color/ttt_background"
                android:id="@+id/RelativeLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            >

            <TextView
                android:text="@string/title_club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:id="@+id/title_club"
                android:textSize="42sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/ttt_primary_text"
                android:textIsSelectable="true"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:text="@string/title_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title_name"
                android:textSize="42sp"
                android:textAlignment="center"
                android:textColor="@color/ttt_secondary_text"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:text="@string/title_choose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/title_choose"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textColor="@color/ttt_secondary_text"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingTop="40dp"
                android:paddingBottom="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_gravity="center">

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/title_cross"
                android:src="@drawable/cross"
                android:scaleType="centerInside"
                android:layout_weight="1"
                android:background="@drawable/token_button"
                android:cropToPadding="false"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:onClick="tokenSelect"/>

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/title_nought"
                android:src="@drawable/nought"
                android:scaleType="centerInside"
                android:layout_weight="1"
                android:background="@drawable/token_button"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:onClick="tokenSelect"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
